@model EF_Models.Standard

@{
    ViewBag.Title = "Create";
}

<h2>Create Standard</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Standard</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  
    <div class="form-group">
        @Html.LabelFor(model => model.standard_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.standard_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.standard_name, "", new { @class = "text-danger" })
            @{
                if (@ViewBag.Error != null)
                {
                    <span style="color:#a94442"> @ViewBag.Error</span>
                }
            }
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

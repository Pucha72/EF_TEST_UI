@model IEnumerable<EF_Models.Standard>

@{
    ViewBag.Title = "Index";
}

<h2>Standard List</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-responsive table_sr_number">
    <thead>
        <tr>
            <td>Sl No</td>
            <th>
                @Html.DisplayNameFor(model => model.standard_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Count() == 0)
        {
            <tr>
                <td colspan='3'>
                    No Records Found
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td> &nbsp;</td>
                <td>
                    @Html.DisplayFor(modelItem => item.standard_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.standard_id }, new { @class = "text-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.standard_id }, new { @class = "text-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.standard_id }, new { @class = "text-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
